# Discord settings
DISCORD_TOKEN=
DISCORD_CHANNEL_ID=
DISCORD_CLIENT_ID=
DISCORD_GUILD_ID=
ADMIN_ROLE_ID=
MOD_ROLE_ID=

# Twitch Settings
TWITCH_USERNAME=
TWITCH_OAUTH=
TWITCH_CHANNEL=
# For multiple channels: TWITCH_CHANNEL=channel1,channel2,channel3
TWITCH_RELAY_CHANNELS=
# Optional: Specify which channels to relay to Discord (comma-separated)
# Example: TWITCH_RELAY_CHANNELS=channel1,channel3
# If not specified, all channels are relayed to Discord
TWITCH_CHANNEL_MAPPING=
# Optional: Map specific Twitch channels to Discord channels (format: twitchchannel:discordchannelid,...)
# Example: TWITCH_CHANNEL_MAPPING=channel1:123456789,channel2:987654321
# If not specified, messages from all channels are relayed to all Discord channels
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_REFRESH_TOKEN=
# Note: To import/export blocked terms, your bot needs moderator:read:blocked_terms and moderator:manage:blocked_terms scopes

# Subscription thank you messages (optional, defaults to true)
SUB_THANK_YOU_ENABLED=true
RESUB_THANK_YOU_ENABLED=true
GIFT_SUB_THANK_YOU_ENABLED=true
# Note: Bot automatically responds to subscriptions/resubs/gift subs with thank you messages using channel emotes

# EventSub (optional)
EVENTSUB_ENABLED=false
EVENTSUB_SECRET=
EVENTSUB_PUBLIC_URL=
EVENTSUB_CALLBACK_PATH=/eventsub
EVENTSUB_PORT=8080
EVENTSUB_BROADCASTER=
# Optional: Role to ping when stream goes offline (via EventSub)
STREAM_ALERT_ROLE_ID=
# Optional: Channels that trigger offline alerts (comma-separated)
# If not set, all EVENTSUB_BROADCASTER channels trigger alerts
OFFLINE_ALERT_CHANNELS=
# Optional: Suppress offline alerts for this many seconds after a raid (default: 30)
RAID_SUPPRESS_WINDOW_SECONDS=30
# Optional: Suppress offline alerts during Twitch 48h stream restarts (default: 60)
# If online+offline events arrive within this window, the offline alert is suppressed
RESTART_SUPPRESS_WINDOW_SECONDS=60

# Optional filter tuning
FILTER_BLOCK_COMMANDS=true
FILTER_BLOCK_EMOTES=false
FILTER_BLOCKED_WORDS=badword1,badword2
FILTER_ONLY_BLOCKED_WORDS=false
FILTER_ALLOWED_USERS=
FILTER_BLOCKED_USERS=
SUSPICIOUS_FLAG_ENABLED=true
REACTION_DELETE_EMOJI=
REACTION_TIMEOUT_EMOJI=
REACTION_BAN_EMOJI=
REACTION_WARN_EMOJI=
REACTION_TIMEOUT_SECONDS=60
# Use Discord Components V2 buttons for moderation instead of emoji reactions
# When true, suspicious messages get Delete/Timeout/Ban/Warn buttons; normal messages get V2 layout
MODERATION_USE_BUTTONS=false

# Freeze monitor (optional, requires ffmpeg in path)
FREEZE_CHECK_ENABLED=false
FREEZE_HLS_URL=
FREEZE_CHANNEL=
FREEZE_CLIENT_ID=
FREEZE_OAUTH_BEARER=
FREEZE_TOKEN_REFRESH_SECONDS=300
FREEZE_DEBUG=false
# Optional: Role to ping when stream freezes
FREEZE_ALERT_ROLE_ID=
FREEZE_OFFLINE_FAILS=3
FREEZE_OFFLINE_BACKOFF_SECONDS=30
FREEZE_FFMPEG_TIMEOUT_SECONDS=8
FREEZE_SAMPLE_SECONDS=5
FREEZE_THRESHOLD_SECONDS=20
# Number of consecutive different frames required before declaring recovery from a freeze (debounce)
FREEZE_RECOVERY_FRAMES=3
# Polling interval (in seconds) when EventSub is disabled but freeze monitor is enabled
FREEZE_POLL_WHEN_OFFLINE_SECONDS=60

# Dashboard (optional, serves web interface at configured port)
DASHBOARD_ENABLED=false
DASHBOARD_DOMAIN=
# Example: DASHBOARD_DOMAIN=kandyland.sponsorn.com
DASHBOARD_DISCORD_CLIENT_SECRET=
# Note: This is a separate secret from TWITCH_CLIENT_SECRET, obtained from Discord Developer Portal
# Configure OAuth redirect URIs in Discord/Twitch:
#   Discord: https://yourdomain.com/auth/discord/callback
#   Twitch: https://yourdomain.com/auth/twitch/callback
